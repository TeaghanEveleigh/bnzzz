{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++ build active file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-Werror",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${workspaceFolder}\\account.cpp",
                "${workspaceFolder}\\user.cpp",
                "${workspaceFolder}\\transaction.cpp",
                "${workspaceFolder}\\SystemWideFunctions.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}